{
  "name": "atmoscontroller",
  "productName": "Atmos Controller",
  "version": "0.1.0",
  "description": "A lightweight, transparent audio control overlay with system-wide volume mixing and audio visualization",
  "main": "dist-electron/main.js",
  "author": "Idk-what-im-doin9",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:linux": "tsc && vite build && electron-builder --linux",
    "build:win": "tsc && vite build && electron-builder --win",
    "build:all": "tsc && vite build && electron-builder -mwl",
    "preview": "vite preview",
    "electron:dev": "vite",
    "electron:build": "vite build && electron-builder",
    "electron:preview": "vite build && electron .",
    "postinstall": "node scripts/check-platform.js"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "framer-motion": "^10.18.0",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.28.1",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.atmoscontroller.app",
    "productName": "Atmos Controller",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "!**/*.map"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "tar.gz"
      ],
      "category": "AudioVideo",
      "icon": "assets/icon.png",
      "description": "A lightweight, transparent audio control overlay with system-wide volume mixing",
      "desktop": {
        "Name": "Atmos Controller",
        "Comment": "Advanced per-application audio mixer for Linux",
        "Categories": "AudioVideo;Audio;Mixer;",
        "Keywords": "audio;volume;mixer;pulseaudio;pipewire;control;",
        "StartupWMClass": "atmos-controller"
      },
      "maintainer": "Idk-what-im-doin9",
      "vendor": "Atmos Controller Project"
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3",
        "pulseaudio"
      ],
      "afterInstall": "build/linux/postinst.sh",
      "afterRemove": "build/linux/postrm.sh"
    },
    "rpm": {
      "depends": [
        "libnotify",
        "libappindicator",
        "libXtst",
        "nss",
        "pulseaudio"
      ],
      "afterInstall": "build/linux/postinst.sh",
      "afterRemove": "build/linux/postrm.sh"
    },
    "appImage": {
      "license": "MIT"
    }
  }
}
